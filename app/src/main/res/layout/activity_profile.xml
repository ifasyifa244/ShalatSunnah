<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/profile"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="assalaam.istigosah.id.shalatsunnah.Profile">
    <ImageView
        android:layout_width="200pt"
        android:layout_height="100pt"
        android:src="@drawable/syifa"
        android:id="@+id/image"/>

    <TextView
        android:layout_below="@+id/image"
        android:textColor="@color/colorPrimaryDark"
        android:text="Full Name : Syifa Fauziah"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="6pt"
        android:layout_width="200pt"
        android:layout_height="20pt"
        android:id="@+id/content"/>
    <TextView
        android:layout_below="@+id/content"
        android:textColor="@color/colorPrimaryDark"
        android:text="Nick Name : Syifa "
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="6pt"
        android:layout_width="200pt"
        android:layout_height="20pt"
        android:id="@+id/content2"
        />
    <TextView
        android:layout_below="@+id/content2"
        android:textColor="@color/colorPrimaryDark"
        android:text="From : XII RPL 1 "
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="6pt"
        android:layout_width="200pt"
        android:layout_height="20pt"
        android:id="@+id/content3"
        />
    <TextView
        android:layout_below="@+id/content3"
        android:textColor="@color/colorPrimaryDark"
        android:text="At : Smk Assalaam Bandung "
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="6pt"
        android:layout_width="200pt"
        android:layout_height="20pt"
        android:id="@+id/content4"
        />



</RelativeLayout>
