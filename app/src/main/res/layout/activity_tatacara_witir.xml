<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_tatacara_witir"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/contenttatacara"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="assalaam.istigosah.id.shalatsunnah.TatacaraWitir">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <ImageView
        android:src="@drawable/istikharah2"
        android:layout_width="200pt"
        android:layout_height="100pt"
        android:id="@+id/image"/>
    <TextView
        android:textColor="#000"
        android:textStyle="bold"
        android:textSize="10pt"
        android:gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Tatacara Sholat Witir"
        android:id="@+id/judul"
        android:layout_below="@+id/image"/>

        <TextView
            android:textColor="#000"
            android:id="@+id/content"
            android:layout_below="@+id/judul"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="1. Niat"/>
        <TextView
            android:textColor="#fff"
            android:id="@+id/content2"
            android:gravity="center"
            android:layout_below="@+id/content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="أصلي سنة الوتر وكعتين لله تعالي"/>
        <TextView
            android:textColor="#000"
            android:id="@+id/content3"
            android:layout_below="@+id/content2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Ushallii sunnatal witri rak’ataini lillahi ta’alaa"/>
        <TextView
            android:textColor="#000"
            android:id="@+id/content4"
            android:layout_below="@+id/content3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Artinya : Saya shalat sunnah witir 2 raka’at karena Allah ta’ala"/>
        <TextView
            android:textColor="#000"
            android:id="@+id/content5"
            android:layout_below="@+id/content4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Sedangkan untuk witir 1 raka’at sebagai berikut :"/>
        <TextView
            android:textColor="#fff"
            android:id="@+id/content6"
            android:gravity="center"
            android:layout_below="@+id/content5"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="أصلي سنة الوتر وكعة لله تعالي"/>
        <TextView
            android:textColor="#000"
            android:id="@+id/content7"
            android:layout_below="@+id/content6"
            android:layout_width="fill_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="Usalli sunnatal witri rak’atan lllahi ta’alaa"/>
        <TextView
            android:textColor="#fff"
            android:id="@+id/content8"
            android:layout_below="@+id/content7"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Artinya: Aku sholat sunnah witir 1 roka’at karena Allah Ta’ala"/>
        <TextView
            android:textColor="#000"
            android:id="@+id/content9"
            android:layout_below="@+id/content8"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="2. Membaca Alfatihah dilanjutkan dengan membaca surat pendek dalam Alqur’an :"/>
        <TextView
            android:textColor="#000"
            android:id="@+id/content10"
            android:layout_below="@+id/content9"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="  – Raka’at pertama Surat Al-A’la"/>
        <TextView
            android:textColor="#000"
            android:id="@+id/content11"
            android:layout_below="@+id/content10"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="  – Raka’at ke dua surat Alkafirun"/>
        <TextView
            android:textColor="#000"
            android:id="@+id/content12"
            android:layout_below="@+id/content11"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="3. Salam"/>
        <TextView
            android:textColor="#000"
            android:id="@+id/content13"
            android:layout_below="@+id/content12"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="3. Berdiri lagi untuk melaksanakan shalat 1 raka’at, setelah membaca Alfatihah dilanjutkan membaca surat : Al-ikhlash, surat Alfalaq dan surat Annas"/>
        <TextView
            android:textColor="#000"
            android:id="@+id/content14"
            android:layout_below="@+id/content13"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="4. Lalu akhiri dengan salam"/>

    </RelativeLayout>
</ScrollView>
