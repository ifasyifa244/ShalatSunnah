<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sholat_idul_adha"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pilihanback"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="assalaam.istigosah.id.shalatsunnah.SholatIdulAdha">
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/judul"
        android:textColor="#fff"
        android:gravity="center"
        android:textSize="10pt"
        android:text="Pilih Panduan :"
        android:textStyle="bold"/>

    <ImageButton
        android:src="@drawable/solat"
        android:layout_width="50pt"
        android:layout_height="50pt"
        android:layout_marginRight="18dp"
        android:layout_marginEnd="18dp"
        android:id="@+id/tatacara"
        android:layout_alignTop="@+id/buku"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />



    <ImageButton
        android:src="@drawable/buku"
        android:layout_width="50pt"
        android:layout_height="50pt"
        android:id="@+id/buku"
        android:layout_marginTop="59dp"
        android:layout_below="@+id/judul"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp" />

    <ImageButton
        android:src="@drawable/doa"
        android:layout_width="50pt"
        android:layout_height="50pt"
        android:layout_below="@+id/tatacara"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="69dp"
        android:id="@+id/doa" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/texttentang"
        android:text="Tentang Sholat Dhuha"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Tatacara"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/texttentang"
        android:layout_alignRight="@+id/tatacara"
        android:layout_alignEnd="@+id/tatacara"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="15dp"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:id="@+id/textView" />

    <TextView
        android:text="Doa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:id="@+id/textView2"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:layout_below="@+id/doa"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
