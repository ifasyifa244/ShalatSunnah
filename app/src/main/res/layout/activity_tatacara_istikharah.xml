<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_tatacara_istikharah"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/contenttatacara"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="assalaam.istigosah.id.shalatsunnah.TatacaraIstikharah">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:layout_width="200pt"
            android:layout_height="100pt"
            android:src="@drawable/istkharah"
            android:id="@+id/imagefitri"/>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/judul"
            android:layout_below="@+id/imagefitri"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="10pt"
            android:text="Tatacara Sholat Istikharah"
            android:gravity="center"/>
        <TextView
            android:textColor="#000"
            android:id="@+id/content"
            android:layout_below="@+id/judul"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="1. Niat Sholat Istikhrah "/>
        <TextView
            android:textColor="#000"
            android:id="@+id/content2"
            android:layout_below="@+id/content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="2. Pada rakaat pertama setelah membaca surat al-fatihah disunatkan membaca salah satu surat dalam Al-Quran apa saja yang kita mampu tetapi alangkah baiknya membaca surat al-kafirun.  "/>
        <TextView
            android:textColor="#000"
            android:id="@+id/content3"
            android:layout_below="@+id/content2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="3. Pada rakaat kedua setelah surat al-fatihah dianjurkan membaca surat al-ikhlas."/>
        <TextView
            android:textColor="#000"
            android:id="@+id/content4"
            android:layout_below="@+id/content3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="4. Setelah selesai sholat lalu membaca doa setelah sholat istkharah."/>
        </RelativeLayout>
</ScrollView>
