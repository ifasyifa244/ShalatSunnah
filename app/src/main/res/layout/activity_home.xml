<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home"
    android:background="@drawable/homeback"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="assalaam.istigosah.id.shalatsunnah.Home">
    
    <ImageView
        android:src="@drawable/imagehome"
        android:layout_width="150pt"
        android:layout_height="100pt"
        android:id="@+id/image"/>

 <Button
     android:background="@drawable/aishhh"
     android:layout_width="70dp"
     android:layout_height="50dp"
     android:id="@+id/logo"
     android:layout_marginRight="26dp"
     android:layout_marginEnd="26dp"
     android:layout_marginBottom="17dp"
     android:layout_alignParentBottom="true"
     android:layout_alignParentRight="true"
     android:layout_alignParentEnd="true" />

 <Button
     android:background="@drawable/icon"
     android:layout_width="150dp"
     android:layout_height="75dp"
     android:layout_marginTop="10dp"
     android:id="@+id/in"
     android:text="Masuk"
     android:gravity="center"
     android:textColor="#000"
     android:textStyle="bold"
     android:layout_below="@+id/text2"
     android:layout_centerHorizontal="true" />

 <Button
     android:background="@drawable/about"
     android:layout_width="50dp"
     android:layout_height="50dp"
     android:id="@+id/about"
     android:layout_marginLeft="13dp"
     android:layout_marginStart="13dp"
     android:layout_alignBottom="@+id/logo"
     android:layout_alignParentLeft="true"
     android:layout_alignParentStart="true" />


 <TextView
  android:layout_width="200pt"
  android:layout_height="20pt"
     android:gravity="center"
  android:textSize="10pt"
  android:textColor="#000"
  android:textStyle="bold"
  android:id="@+id/text"
     android:layout_marginTop="20dp"
     android:text="Mari Belajar "
     android:layout_below="@+id/image"
     android:layout_alignParentLeft="true"
     android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="200pt"
        android:layout_height="17pt"
        android:gravity="center"
        android:textSize="8pt"
        android:textColor="#000"
        android:textStyle="bold"
        android:id="@+id/text2"
        android:text=" PANDUAN SHALAT SUNNAH"
        android:layout_alignTop="@+id/text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="34dp" />

</RelativeLayout>
