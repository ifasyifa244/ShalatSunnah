<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_daftar_sholat_sunnah"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/homeback"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="assalaam.istigosah.id.shalatsunnah.DaftarSholatSunnah">
    
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/Idul"
            android:background="@drawable/green"
            android:text="Shalat
Idul fitri"
            android:textSize="10dp"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_below="@+id/Dhuha"
            android:layout_alignLeft="@+id/Dhuha"
            android:layout_alignStart="@+id/Dhuha" />

        <Button
            android:id="@+id/Adha"
            android:background="@drawable/brown"
            android:text="Shalat
Idul Adha"
            android:textSize="10dp"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_alignBaseline="@+id/Idul"
            android:layout_alignBottom="@+id/Idul"
            android:layout_alignLeft="@+id/Tahajud"
            android:layout_alignStart="@+id/Tahajud" />

        <Button
            android:id="@+id/Gerhana"
            android:background="@drawable/green"
            android:text="Shalat
Gerhana"
            android:textSize="10dp"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_below="@+id/Idul"
            android:layout_alignLeft="@+id/Idul"
            android:layout_alignStart="@+id/Idul" />

        <Button
            android:id="@+id/Istikharah"
            android:background="@drawable/brown"
            android:text="Shalat
Istikharah"
            android:textSize="10dp"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_alignBaseline="@+id/Gerhana"
            android:layout_alignBottom="@+id/Gerhana"
            android:layout_alignLeft="@+id/Adha"
            android:layout_alignStart="@+id/Adha" />

        <Button
            android:id="@+id/Gaib"
            android:background="@drawable/green"
            android:text="Shalat
Gaib"
            android:textSize="10dp"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_below="@+id/Gerhana"
            android:layout_alignLeft="@+id/Gerhana"
            android:layout_alignStart="@+id/Gerhana" />

        <Button
            android:id="@+id/Taubat"
            android:background="@drawable/brown"
            android:text="Shalat
Taubat"
            android:textSize="10dp"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_alignBaseline="@+id/Gaib"
            android:layout_alignBottom="@+id/Gaib"
            android:layout_alignLeft="@+id/Istikharah"
            android:layout_alignStart="@+id/Istikharah" />

        <Button
            android:id="@+id/Witir"
            android:background="@drawable/green"
            android:text="Shalat
Witir"
            android:textSize="10dp"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_below="@+id/Gaib"
            android:layout_alignLeft="@+id/Gaib"
            android:layout_alignStart="@+id/Gaib" />

        <Button
            android:id="@+id/Hajat"
            android:background="@drawable/brown"
            android:text="Shalat
Hajat"
            android:textSize="10dp"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_alignBaseline="@+id/Witir"
            android:layout_alignBottom="@+id/Witir"
            android:layout_alignLeft="@+id/Taubat"
            android:layout_alignStart="@+id/Taubat" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:textSize="20dp"
            android:gravity="center"
            android:text="Daftar Shalat Sunnah :"
            android:textStyle="bold"
            android:textColor="#000"
            android:id="@+id/judul"
            android:layout_marginTop="32dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/Dhuha"
            android:background="@drawable/green"
            android:text="Shalat Dhuha"
            android:textSize="10dp"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginTop="39dp"
            android:layout_below="@+id/judul"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/Tahajud"
            android:background="@drawable/brown"
            android:text="Shalat
Tahajud"
            android:textSize="10dp"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_marginRight="19dp"
            android:layout_marginEnd="19dp"
            android:layout_alignBaseline="@+id/Dhuha"
            android:layout_alignBottom="@+id/Dhuha"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

</ScrollView>
